{
  "manual_version": "1.0.0",
  "utcp_version": "1.0.1",
  "tools": [
    {
      "name": "get_currency",
      "description": "Retrieve Currency Exchange Rates",
      "inputs": {
        "type": "object",
        "properties": {
          "user_fields": {
            "type": "object",
            "properties": {
              "value": {"type": "number", "description": "Amount to be converted"},
              "source_currency": {"type": "string", "description": "Source Currency Code as ISO-4217"},
              "target_currency": {"type": "string", "description": "Target Currency Code as ISO-4217"}
            },
            "required": ["value", "source_currency", "target_currency"]
          }
        },
        "required": ["user_fields"]
      },
      "outputs": {
        "type": "object",
        "properties": {
          "value": {"type": "number"},
          "target_currency": {"type": "string"},
          "exchange_rate": {"type": "number"},
          "exchange_date": {"type": "string"}
        }
      },
      "tool_call_template": {
        "call_template_type": "http",
        "url": "https://oemil-qs.volkswagen.de/services/converters/currency",
        "http_method": "POST",
        "headers": {
          "Authorization": "Bearer ${CIDP_TOKEN}",
          "Content-Type": "application/json",
          "oemil-trace-id": "mcp-utcp-tester-dkar",
          "oemil-client-app": "OEM.IL-Testers",
          "oemil-api-version": "v1.6",
          "oemil-client-brand": "Volkswagen",
          "oemil-client-country": "DE",
          "oemil-lee-name": "000100",
          "oemil-lee-country": "DE"
        },
        "body_field": "user_fields"
      }
    },
    {
      "name": "get_price",
      "description": "Retrieve Current Price of a Crypto Coin in EUR",
      "inputs": {
        "type": "object",
        "properties": {
          "coin_name": {"type": "string", "description": "Name of the crypto coin"}
        },
        "required": ["coin_name"]
      },
      "outputs": {
        "type": "object",
        "properties": {}
      },
      "tool_call_template": {
        "call_template_type": "http",
        "url": "https://api.coingecko.com/api/v3/simple/price?names={coin_name}&vs_currencies=eur",
        "http_method": "GET",
        "auth": {
            "auth_type": "api_key",
            "api_key": "${COINGECKO_API_KEY}",
            "var_name": "x-cg-api-key",
            "location": "header"
        }
      }
    },
    {
      "name": "get_temperature",
      "description": "Retrieve Current Temperature by Latitude and Longitude",
      "inputs": {
        "type": "object",
        "properties": {
          "city_latitude": {"type": "string", "description": "Latitude of the city"},
          "city_longitude": {"type": "string", "description": "Longitude of the city"}
        },
        "required": ["city_latitude", "city_longitude"]
      },
      "outputs": {
        "type": "object",
        "properties": {
          "latitude": {"type": "number"},
          "longitude": {"type": "number"},
          "generationtime_ms": {"type": "number"},
          "utc_offset_seconds": {"type": "number"},
          "timezone": {"type": "string"},
          "timezone_abbreviation": {"type": "string"},
          "elevation": {"type": "number"},
          "current_units": {
            "type": "object",
            "properties": {
              "time": {"type": "string"},
              "interval": {"type": "string"},
              "temperature_2m": {"type": "string"}
            }
          },
          "current": {
            "type": "object",
            "properties": {
              "time": {"type": "string"},
              "interval": {"type": "number"},
              "temperature_2m": {"type": "number"}
            }
          }
        }
      },
      "tool_call_template": {
        "call_template_type": "http",
        "url": "https://api.open-meteo.com/v1/forecast?latitude={city_latitude}&longitude={city_longitude}&current=temperature_2m",
        "http_method": "GET"
      }
    }
  ]
}